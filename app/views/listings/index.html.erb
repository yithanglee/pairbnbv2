<h1>Room listings</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Price</th>
    <th>Availability</th>
    <th>Preview</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.title %></td>
    <td><%= listing.description %></td>
    <td><%= listing.location %></td>
    <td><%= listing.price %></td>
    <td><%= listing.availability %></td>
    <% if listing.avatars[0].nil?%>
    <td> No Image </td>
<% else %>
  <td>
<a href="<%= listing.avatars[0].url%>" data-lightbox="listing"><%= image_tag(listing.avatars[0].url, size:"180") %></a>
  </td>
    <% end %>
<% if current_user.id.to_s == params["user_id"]%>
    <td><%= link_to 'Show', [listing.user, listing] %></td>
    <td><%= link_to 'Edit', edit_user_listing_path(listing.user, listing) %></td>
    <td><%= link_to 'Destroy', [listing.user, listing], :confirm => 'Are you sure?', :method => :delete %></td>
    <% else %>
    <td></td>
    <td></td>
    <td></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />


<%= link_to 'New Listing', new_user_listing_path(current_user.id) %>
