<div class="container">
  <div class="row"><center>
  <p> <h1> <%= @listing.title %></h1> </p>
  <p>By: <%= @listing.user.email %></p>
  </center>
  </div>

</div>

<div class="container">
  <div id="listing" class="row">
  <center>
   <b>Location:</b><span class="badge"><%= @listing.location %></span>
   <b>Price:</b> <span class="badge"><%= @listing.price %></span>
   <b>Availability:</b> <span class="badge"> <%= @listing.availability %></span>
   </center>
   <br>
      <div class="well"><b>Description:</b><%= @listing.description %></div>
  </div>
</div>

<div class="container">
  <div class="row">
  <p>
    <b>Tags:</b>
    <% @listing.tags.each do |x| %>
    <%= x.name %>
    <% end %>
  </p>
  </div>
</div>



<div class="container">
  <div class="btn-group" role="group" aria-label="...">
    <% if signed_in? %>
    <% if current_user.id == @listing.user.id %>
    <%= link_to 'Edit', edit_user_listing_path(@listing.user, @listing), :class => "btn btn-default" %> <%= link_to 'Back', user_listings_path(@listing.user), :class => "btn btn-default" %>
    <% else %>
<%= form_tag(@url, method:"post") do %>
Checkin <%= date_select(:q, :checkin, :order => [:day, :month, :year]) %>
Checkout  <%= date_select(:q, :checkout, :order => [:day, :month, :year]) %>
  <%= hidden_field_tag(@listing.id) %><br><br>
  <%= submit_tag("Reserve") %>
<% end %>

    <% end %>
    <% else %>
    <%= link_to 'Sign In to reserve this listing', sign_in_path, :class => "btn btn-default" %>
    <% end %>
  </div>
</div>
<br>
<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
     <h3 class="panel-title">Available Dates</h3>
    </div>
    <div class="panel-body">

      <%= month_calendar events: @staying_dates do |date, reservations| %>
        <%= date %>

        <% reservations.each do |reservation| %>
        <div>

        <% if reservation.reservation.listing.id.to_s == params["id"] %>
          <%= reservation.reservation_id %>
           <%= reservation.reservation.user.email %>
    <% end %>

        </div>
      <% end %>
    <% end %>
    </div>
   </div>
 </div> 