<div class="container">
	<div class="row">
	<center>
	  <%= form_for Listing.new, method: :get, url: search_path, class: "navbar-form navbar-left" do |f| %>
    <%= text_field_tag :term, params[:term], placeholder:"Where do you wanna go?" %>
    <div>
    <%= f.submit 'search', class: 'btn btn-primary' %>
  	</div>
  	<% end %>
  	</center>
  	<br>
  	</div>
</div>


<div class="container-fluid">
<div class="row">
	<div class="col-md-6">
	<div class="panel panel-primary">
	  <div class="panel-heading">
	   <h3 class="panel-title">Available Listings</h3>
	 	</div>
	 	<div class="panel-body">
			<table class="table">
				<tr>
					<th>Title</th>
					<th>Preview</th>
					<th>Host</th>
					<th>Action1</th>

				</tr>

			<% @listings.each do |x| %>
			<tr>

				<td><%= x.title %></td>
				<% if x.avatars[0].nil? %>
				<td>No image preview  </td>
				<% else %>
				<td><%= image_tag(x.avatars[0].url, size:'100')%></td>
				<% end %>
				<td><%= x.user.email%></td>
				<td><%= link_to 'book this', user_listing_path(x.user.id, x.id), :class=> "btn btn-default" %></td>
			</tr>
			<% end %>
			</table>
			<!-- end for panel body -->
			</div>
			<!-- end for panel primary -->
		</div>
		<!-- end for col 6 -->
		</div>

<div class="col-md-6">
	<div class="panel panel-primary">
	  <div class="panel-heading">
	   <h3 class="panel-title">My Listings</h3>
	 	</div>
	 	<div class="panel-body">
			<table class="table">
			<% if signed_in? %>
				<tr>
					<th>Title</th>
					<th>Preview</th>
					<th>Upcoming stays this month</th>
					<th>Action1</th>

				</tr>

	<% if @listings_my.nil? %>
	<p>Create a new one instead?</p>
	<%= link_to 'New Listing', new_user_listing_path(current_user.id) %>
	<% else %>
			<% @listings_my.each do |x| %>
			<tr>
				<td><%= x.title %></td>
				<% if x.avatars[0].nil? %>
				<td>No image preview  </td>
				<% else %>
				<td><%= image_tag(x.avatars[0].url, size:'100')%></td>
				<% end %>
				<td><%= x.reservations.count%></td>
				<td><%= link_to 'Manage this', user_listing_path(x.user.id, x.id), :class=> "btn btn-default" %></td>
			</tr>
			<% end %>
	<% end %>
	<% else %>
	<%= link_to 'Sign in', sign_in_path %>
<% end %>
			</table>
			<!-- end for panel body -->
			</div>
			<!-- end for panel primary -->
		</div>
		<!-- end for col 6 -->
		</div>

<!-- end for row -->
</div>
<!-- end for container-fluid -->
</div>


