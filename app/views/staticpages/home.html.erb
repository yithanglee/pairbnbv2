<div class="page-header">
	<h1>Staticpages#home</h1>
	<p>Find me in app/views/staticpages/home.html.erb</p>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
   <h3 class="panel-title">Available Listings</h3>
 	</div>
 	<div class="panel-body">
		<table class="table">
			<tr>
				<th>Title</th>
				<th>Preview</th>
				<th>Host</th>
				<th>Action1</th>
				<th>Action2</th>
			</tr>

		<% @listings.each do |x| %>
		<tr>

			<td><%= x.title %></td>
			<% if x.avatars[0].nil? %>
			<td>No image preview  </td>
			<% else %>
			<td><%= image_tag(x.avatars[0].url, size:'100')%></td>
			<% end %>
			<td><%= x.user.email%></td>
			<td><%= link_to 'book this', user_listing_path(x.user.id, x.id)%></td>
			<td></td>

		</tr>
		<% end %>
		</table>
		</div>
	</div>

  <%= form_for Listing.new, method: :get, url: search_path, class: "navbar-form navbar-left" do |f| %>
    <%= text_field_tag :term, params[:term], placeholder:"Where do you wanna go?" %>
    <%= f.submit 'search', class: 'btn btn-primary' %>
  <% end %>
